<Window x:Class="Global_List_Editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Global_List_Editor.ViewModel"
        xmlns:local="clr-namespace:Global_List_Editor.Converters"
        Title="Global List Editor" Height="500" Width="800">
    <Window.Resources>
        <local:StringNullOrEmptyToVisibilityConverter x:Key="StringNullOrEmptyToVisibilityConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <!-- Style for grid cell padding -->
        <Style x:Key="GridCellPaddingStyle" TargetType="FrameworkElement">
            <Setter Property="Margin" Value="10"/>
        </Style>

        <!-- Alternate row color style for ListBoxItem -->
        <Style x:Key="AlternateRowListBoxItemStyle" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="8,0"/>
            <Setter Property="Background" Value="White"/>
            <Style.Triggers>
                <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                    <Setter Property="Background" Value="#FFF0F0F0"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FF3399FF"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Window.DataContext>
        <vm:GlobalListViewModel />
    </Window.DataContext>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Environment selection -->
        <ComboBox Grid.Column="0"
                  ItemsSource="{Binding Environments}"
                  SelectedItem="{Binding SelectedEnvironment, Mode=TwoWay}"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Center"
                  Width="Auto"
                  Style="{StaticResource GridCellPaddingStyle}"
                  Padding="8,6" />

        <!-- Collection URL display -->
        <TextBlock Grid.Row="0" Grid.Column="1"
                 Text="{Binding EnvironmentUrl}"                  
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Center"
                 Width="Auto"
                 Style="{StaticResource GridCellPaddingStyle}"
                 Padding="8,6" />

        <!-- Global Lists Panel (Left) with Search -->
        <StackPanel Grid.Row="2" Grid.Column="0" Margin="8,0,13,0">
            <TextBlock Text="Global Lists" FontWeight="Bold" FontSize="16" Margin="0,0,0,8"/>
            <Grid Margin="0,0,0,8">
                <TextBox
                    x:Name="SearchBox"
                    Text="{Binding GlobalListSearchText, UpdateSourceTrigger=PropertyChanged}"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    Width="Auto"
                    Padding="8,6"/>
                <TextBlock
                    Text="Search..."
                    Foreground="Gray"
                    Margin="5,2,0,0"
                    IsHitTestVisible="False"
                    VerticalAlignment="Center"
                    Visibility="{Binding Text, ElementName=SearchBox, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}"/>
            </Grid>
            <ListBox ItemsSource="{Binding FilteredGlobalLists}"
                     SelectedItem="{Binding SelectedGlobalList, Mode=TwoWay}"
                     DisplayMemberPath="Name"
                     Margin="0,0,0,0"
                     HorizontalAlignment="Stretch"
                     VerticalAlignment="Stretch"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     Height="270"
                     AlternationCount="2"
                     ItemContainerStyle="{StaticResource AlternateRowListBoxItemStyle}">
               
            </ListBox>
        </StackPanel>

        <!-- Exported List Items Panel (Right) with Search and Add -->
        <StackPanel Grid.Row="2" Grid.Column="1" Margin="5,0,0,0">
            <TextBlock Text="List Items Values" FontWeight="Bold" FontSize="16" Margin="0,0,0,8"/>
            <Grid Margin="0,0,0,8">
                <!-- TextBox fills the cell -->
                <TextBox
                    x:Name="ExportedItemsSearchBox"
                    Text="{Binding ExportedListItemsSearchText, UpdateSourceTrigger=PropertyChanged}"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    Width="Auto"
                    Padding="8,6"/>
                <TextBlock
                    Text="Search..."
                    Foreground="Gray"
                    Margin="5,2,0,0"
                    IsHitTestVisible="False"
                    VerticalAlignment="Center"
                    Visibility="{Binding Text, ElementName=ExportedItemsSearchBox, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}"/>
                <!-- Buttons overlayed on the right -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0,0,8,0">
                    <Button Content="Add"
                            Width="50"
                            Height="24"
                            Margin="0,0,4,0"
                            Padding="0"
                            Visibility="{Binding ShowAddExportedListItemButton, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Command="{Binding AddExportedListItemCommand}"
                            CommandParameter="{Binding ExportedListItemsSearchText}" />
                    <Button Content="Delete"
                            Width="60"
                            Height="24"
                            Padding="0"
                            Visibility="{Binding ShowDeleteExportedListItemButton, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Command="{Binding DeleteExportedListItemCommand}"
                            CommandParameter="{Binding ExportedListItemsSearchText}" />
                </StackPanel>
            </Grid>
            <ListBox ItemsSource="{Binding FilteredExportedListItems}"
                     Margin="0,0,0,0"
                     HorizontalAlignment="Stretch"
                     VerticalAlignment="Stretch"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     Height="270"
                     AlternationCount="2"
                     ItemContainerStyle="{StaticResource AlternateRowListBoxItemStyle}">
            </ListBox>
        </StackPanel>


        <Button Grid.Column="0" Grid.Row="3"                            
            Content="Apply Changes to Server"
            Width="250"
            Height="24"
            Margin="0,0,4,0"
            Padding="0"
            Command="{Binding ApplyChangesToAzureServer}" />


        <Button Grid.Column="1" Grid.Row="3"                            
            Content="Download Entire Global list"
            Width="250"
            Height="24"
            Margin="0,0,4,0"
            Padding="0"
            Command="{Binding DownloadEntireGlobalList}" />
    </Grid>
</Window>
